<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlush"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spending Graph"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primaryPink"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnGraphBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="Graph"
            android:scaleType="fitCenter"
            android:src="@drawable/graph" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming soon Watch this space!"
            android:textAlignment="center"
            android:textSize="48sp" />
    </LinearLayout>
</ScrollView>