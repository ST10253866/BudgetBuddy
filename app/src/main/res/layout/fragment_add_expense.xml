<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlush"
    android:focusable="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddBack"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:text="Back" />

        <EditText
            android:id="@+id/etExpenseName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/etExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Amount"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etExpenseDescription"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:hint="Description" />

        <EditText
            android:id="@+id/etMonthYear"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:digits="1234567890/"
            android:hint="MM/YYYY"
            android:maxLength="7" />

        <Spinner
            android:id="@+id/spnCategories"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:id="@+id/imgExpensePhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="Expense Photo"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Upload Photo" />

        <Button
            android:id="@+id/btnSaveExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/secondaryGreen"
            android:text="Save Expense"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>