<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundBlush">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Category"
            android:textSize="24sp"
            android:textColor="@color/primaryPink"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Category Name -->
        <EditText
            android:id="@+id/etCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Name"
            android:backgroundTint="@color/primaryPink"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Category Name -->

        <!-- Category Description -->

        <EditText
            android:id="@+id/etCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/primaryPink"
            android:gravity="top"
            android:hint="Category Description (Optional)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etMinGoal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/primaryPink"
            android:hint="Minimum Monthly Spending Goal"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etMaxGoal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:hint="Maximum Monthly Spending Goal"
            android:backgroundTint="@color/primaryPink"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Category"
            android:backgroundTint="@color/secondaryGreen"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>