<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundBlush">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Category"
            android:textSize="24sp"
            android:textColor="@color/primaryPink"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Category Name -->
        <EditText
            android:id="@+id/editTextCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Name"
            android:backgroundTint="@color/primaryPink"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Category Name -->
        <EditText
            android:id="@+id/editTextCategoryAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount For Category"
            android:backgroundTint="@color/primaryPink"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Category Description -->
        <EditText
            android:id="@+id/editTextCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Description (Optional)"
            android:backgroundTint="@color/primaryPink"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/edtMinGoal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/primaryPink"
            android:hint="Minimum Monthly Spending Goal"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtMaxGoal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:hint="Maximum Monthly Spending Goal"
            android:backgroundTint="@color/primaryPink"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Category"
            android:backgroundTint="@color/secondaryGreen"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>