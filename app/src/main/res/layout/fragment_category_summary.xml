<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundBlush">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category Summary"
            android:textSize="28sp"
            android:textColor="@color/primaryPink"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Category:"
            android:textColor="@color/primaryPink"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/primaryPink" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Start Date:"
            android:textColor="@color/primaryPink"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtStartDate"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/primaryPink"
            android:clickable="true"
            android:focusable="false"
            android:hint="MM/DD/YYYY"
            android:textColor="@android:color/black" />

        <!-- End Date Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select End Date:"
            android:textColor="@color/primaryPink"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtEndDate"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/primaryPink"
            android:clickable="true"
            android:focusable="false"
            android:hint="MM/DD/YYYY"
            android:textColor="@android:color/black" />

        <!-- Summary ListView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary Details:"
            android:textColor="@color/primaryPink"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/listViewSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/primaryPink"
            android:dividerHeight="1dp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:elevation="2dp" />

    </LinearLayout>

</ScrollView>